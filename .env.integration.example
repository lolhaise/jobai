# API Integration Framework Configuration

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-here
WEBHOOK_SIGNATURE_HEADER=x-signature
WEBHOOK_SIGNATURE_PREFIX=sha256=
WEBHOOK_TIMESTAMP_HEADER=x-timestamp
WEBHOOK_TOLERANCE_WINDOW=300
WEBHOOK_MAX_BODY_SIZE=1048576
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=1000

# Cache Configuration
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=300
CACHE_PREFIX=jobai
CACHE_MAX_MEMORY_SIZE=52428800

# Redis Configuration (optional - falls back to memory cache)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60000

# Job Board Specific Rate Limits (requests per minute)
RATE_LIMIT_REMOTE_OK=60
RATE_LIMIT_REMOTIVE=100
RATE_LIMIT_THE_MUSE=100
RATE_LIMIT_USA_JOBS=200
RATE_LIMIT_LINKEDIN=50
RATE_LIMIT_INDEED=100
RATE_LIMIT_GLASSDOOR=50

# Error Handling Configuration
ERROR_MAX_RETRIES=3
ERROR_BASE_DELAY=1000
ERROR_MAX_DELAY=30000
ERROR_BACKOFF_FACTOR=2

# Circuit Breaker Configuration
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RESET_TIMEOUT=60000
CIRCUIT_BREAKER_MONITORING_PERIOD=60000

# API Keys for Job Boards
REMOTE_OK_API_KEY=your-remote-ok-api-key
REMOTIVE_API_KEY=your-remotive-api-key
THE_MUSE_API_KEY=your-the-muse-api-key
USA_JOBS_API_KEY=your-usa-jobs-api-key
LINKEDIN_API_KEY=your-linkedin-api-key
LINKEDIN_API_SECRET=your-linkedin-api-secret
INDEED_API_KEY=your-indeed-api-key
GLASSDOOR_API_KEY=your-glassdoor-api-key

# API Encryption Configuration
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Monitoring Configuration
MONITORING_ENABLED=true
HEALTH_CHECKS_ENABLED=true
METRICS_ENABLED=true
ALERTING_ENABLED=false

# Logging Configuration
LOG_LEVEL=info
LOG_API_REQUESTS=true
LOG_WEBHOOK_EVENTS=true
LOG_RATE_LIMIT_EVENTS=false

# Security Configuration
API_CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
API_CORS_CREDENTIALS=true
API_RATE_LIMIT_TRUST_PROXY=true
API_HELMET_ENABLED=true