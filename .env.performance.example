# Performance and CDN Configuration
# Copy this file to .env.local and update with your values

# CDN Configuration
# Use a CDN URL for static assets in production
NEXT_PUBLIC_CDN_URL=https://cdn.jobai.com
# Alternative CDN options:
# NEXT_PUBLIC_CDN_URL=https://d1234567890.cloudfront.net
# NEXT_PUBLIC_CDN_URL=https://jobai.b-cdn.net

# Image CDN (Cloudinary, Imgix, etc.)
NEXT_PUBLIC_IMAGE_CDN_URL=https://res.cloudinary.com/jobai
CLOUDINARY_CLOUD_NAME=jobai
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Redis Cache Configuration
REDIS_URL=redis://localhost:6379
# Production Redis (Upstash, Redis Cloud, etc.)
# REDIS_URL=redis://default:password@redis-12345.c123.us-east-1-2.ec2.cloud.redislabs.com:12345

# Performance Monitoring
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# API Rate Limiting
API_RATE_LIMIT_PER_MINUTE=60
API_RATE_LIMIT_PER_HOUR=1000

# Cache TTL Settings (in seconds)
CACHE_TTL_JOB_SEARCH=3600        # 1 hour
CACHE_TTL_JOB_DETAILS=86400      # 24 hours
CACHE_TTL_USER_PROFILE=300       # 5 minutes
CACHE_TTL_RESUME_DATA=600        # 10 minutes
CACHE_TTL_DASHBOARD_STATS=300    # 5 minutes

# Database Connection Pool
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_POOL_ACQUIRE_TIMEOUT=60000
DATABASE_POOL_IDLE_TIMEOUT=10000

# Image Optimization
NEXT_PUBLIC_IMAGE_QUALITY=75
NEXT_PUBLIC_IMAGE_FORMATS=avif,webp
NEXT_PUBLIC_IMAGE_DEVICE_SIZES=640,750,828,1080,1200,1920,2048,3840
NEXT_PUBLIC_IMAGE_SIZES=16,32,48,64,96,128,256,384

# Bundle Analysis
ANALYZE=false

# Static Export (for CDN deployment)
STATIC_EXPORT=false

# Compression
COMPRESSION_LEVEL=6

# Service Worker
NEXT_PUBLIC_ENABLE_SERVICE_WORKER=true
NEXT_PUBLIC_SW_CACHE_VERSION=v1

# Lazy Loading
NEXT_PUBLIC_LAZY_LOAD_THRESHOLD=0.1
NEXT_PUBLIC_LAZY_LOAD_ROOT_MARGIN=50px