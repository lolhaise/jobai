{
  "name": "JobAI - Job Application Automation",
  "short_name": "JobAI",
  "description": "Automate your job search with AI-powered application tracking and resume building",
  "start_url": "/dashboard",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#3b82f6",
  "orientation": "portrait-primary",
  "scope": "/",
  "categories": ["productivity", "business"],
  "lang": "en-US",
  "dir": "ltr",
  "icons": [
    {
